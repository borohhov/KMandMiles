<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView android:id="@+id/mainactivity_textview_kilometers"
        android:hint="@string/kilometers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mainactivity_miles"
        android:layout_margin="7.57dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:visibility="invisible"
        />

    <EditText android:id="@+id/mainactivity_kilometers"
        android:hint="@string/kilometers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mainactivity_miles"
        android:layout_margin="7.57dp"
        android:inputType="numberDecimal"
        app:layout_constraintVertical_chainStyle="packed"
    />

    <TextView android:id="@+id/mainactivity_textview_miles"
        android:hint="@string/enter_miles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainactivity_kilometers"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="7.56dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:visibility="invisible"/>

    <EditText android:id="@+id/mainactivity_miles"
        android:hint="@string/enter_miles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainactivity_kilometers"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="7.56dp"
        android:inputType="numberDecimal"
        app:layout_constraintVertical_chainStyle="packed"/>




</android.support.constraint.ConstraintLayout>